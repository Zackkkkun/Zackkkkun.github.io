---
import { Icon } from 'astro-icon/components'
import { Picture } from 'astro:assets'
import '@styles/tech-colors.css'

interface Props {
  src: string
  alt: string
  title: string
  description: string
  techs?: string[]
}

const { src, alt, title, description, techs = [] } = Astro.props

const images = import.meta.glob('../images/projects/*.{jpeg,jpg,png}', {
  eager: true,
  import: 'default'
})

// Find the image by filename
const filename = src.split('/').pop()
if (!filename) {
  throw new Error(`Invalid image source: ${src}`)
}

const imageKey = Object.keys(images).find(key => key.includes(filename))

if (!imageKey) {
  console.error('Available images:', Object.keys(images))
  console.error('Looking for filename:', filename)
  throw new Error(
    `Image "${filename}" not found. Available: ${Object.keys(images).join(', ')}`
  )
}

const imageData = images[imageKey] as any
---

<section class="card-project">
  <div>
    <a href="#">
      <Picture
        src={imageData}
        alt={alt}
        width={400}
        height={250}
        formats={['avif', 'webp']}
        fallbackFormat="webp"
      />
    </a>
  </div>
  <div class="description">
    <h3><a href="#">{title}</a></h3>
    <div class="badges">
      {
        techs.length > 0 && techs.map((tech) => {
          const techLower = tech.toLowerCase().replaceAll(' ', '-')

          return (
            <span class={`badge-tech ${techLower}`}>
              <Icon name={`techs/${techLower}`} size={24} />
              <span>{tech}</span>
            </span>
          )
        })
      }
    </div>
    <p>{description}</p>
  </div>
</section>

<style>
  .card-project {
    background: var(--bg-card);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    display: flex;
    flex-direction: column;
    height: 100%;
    transition: all var(--transition-normal);
    box-shadow: var(--shadow-sm);

    &:hover {
      border-color: var(--accent-primary);
      box-shadow: var(--shadow-glow);
      transform: translateY(-4px);
    }

    & img {
      border-radius: var(--radius-md);
      width: 100%;
      height: auto;
      transition: all var(--transition-normal);
      border: 2px solid var(--border-primary);
    }

    &:hover img {
      border-color: var(--accent-primary);
      box-shadow: 0 0 20px rgba(0, 255, 102, 0.3);
    }

    & .description {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: var(--spacing-sm);
      & h3 {
        font-family: var(--font-heading);
        font-size: 1.5rem;
        color: var(--accent-primary);
        margin: 0;
        text-shadow: 0 0 10px rgba(0, 255, 102, 0.3);

        & a {
          color: inherit;
          text-decoration: none;
          transition: all var(--transition-fast);

          &:hover {
            color: var(--accent-secondary);
            text-shadow: 0 0 15px rgba(0, 204, 85, 0.5);
          }
        }
      }

      .badges {
        display: flex;
        flex-wrap: wrap;
        gap: var(--spacing-sm);

        & .badge-tech {
          display: inline-flex;
          align-items: center;
          gap: var(--spacing-xs);
          padding: var(--spacing-xs) var(--spacing-sm);
          border-radius: var(--radius-xl);
          font-size: 0.75rem;
          font-family: var(--font-mono);
          background: var(--bg-secondary);
          border: 1px solid var(--border-primary);
          color: var(--accent-primary);
          transition: all var(--transition-fast);

          &:hover {
            background: var(--accent-primary);
            color: var(--bg-primary);
            box-shadow: 0 0 10px rgba(0, 255, 102, 0.3);
          }
        }
      }

      & p {
        color: var(--text-secondary);
        font-size: 1rem;
        line-height: 1.6;
        margin: 0;
        flex: 1;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
    }
  }
</style>
