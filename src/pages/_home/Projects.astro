---
import { t } from 'i18n:astro'
import CardProject from '@components/CardProject.astro'

const { title, projects } = t('projects', {
  returnObjects: true
})
---

<section id="projects" class="section projects">
  <div class="container">
    <h2 class="section-title animate-fade-in-up">{title}</h2>
    <div class="projects-grid">
      {
        projects.map(({ title, description, image }, index) => (
          <div class={`project-item animate-fade-in-up animate-stagger-${(index % 6) + 1}`}>
            <CardProject
              src={image}
              alt={title}
              title={title}
              description={description}
            />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .projects {
    padding: var(--spacing-3xl) 0;
  }

  .projects-grid {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2xl);
    margin-top: var(--spacing-3xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .project-item {
    opacity: 0;
    display: flex;
  }
</style>
