---
import Zack from '@images/Zack.jpeg'
import { Picture } from 'astro:assets'
import { t } from 'i18n:astro'

const { title, subtitle, description } = t('about', {
  returnObjects: true
})
---

<section id="about-me" class="section about">
  <div class="container">
    <h2 class="section-title animate-fade-in-up">{title}</h2>
    <section class="info animate-fade-in-up animate-stagger-1">
      <div class="picture">
        <Picture
          src={Zack}
          alt="Zack"
          width={366}
          height={361}
          formats={['avif', 'webp']}
          fallbackFormat="webp"
        />
      </div>
      <div class="description">
        <h3 class="headline-2">{subtitle}</h3>
        <p>{description}</p>
      </div>
    </section>
  </div>
</section>

<style>
  .about {
    padding: var(--spacing-3xl) 0;
  }

  .info {
    background: var(--bg-card);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-2xl);
    margin-top: var(--spacing-3xl);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
    opacity: 0;

    @media (width >= 768px) {
      padding: var(--spacing-3xl);
      max-width: 600px;
      margin: var(--spacing-3xl) auto 0;
    }

    @media (width >= 1200px) {
      flex-direction: row;
      max-width: 1000px;
      align-items: flex-start;
    }

    &:hover {
      border-color: var(--accent-primary);
      box-shadow: var(--shadow-glow);
      transform: translateY(-4px);
    }
  }

  .picture {
    flex-shrink: 0;

    img {
      border-radius: var(--radius-md);
      width: 200px;
      height: 200px;
      object-fit: cover;
      border: 2px solid var(--border-primary);
      transition: all var(--transition-normal);

      @media (width >= 768px) {
        width: 250px;
        height: 250px;
      }

      @media (width >= 1200px) {
        width: 300px;
        height: 300px;
      }
    }

    &:hover img {
      border-color: var(--accent-primary);
      box-shadow: 0 0 20px rgba(0, 255, 102, 0.3);
    }
  }

  .description {
    flex: 1;
    text-align: center;

    @media (width >= 1200px) {
      text-align: left;
    }

    h3 {
      font-family: var(--font-heading);
      font-size: 1.5rem;
      color: var(--accent-primary);
      margin-bottom: var(--spacing-lg);
      text-shadow: 0 0 10px rgba(0, 255, 102, 0.3);

      @media (width >= 768px) {
        font-size: 1.75rem;
      }
    }

    p {
      font-size: 1.1rem;
      color: var(--text-secondary);
      line-height: 1.7;
      margin: 0;

      @media (width >= 768px) {
        font-size: 1.2rem;
      }
    }
  }
</style>
